	note = {arXiv:2103.00020 [cs]},
	keywords = {Computer Science - Machine Learning, Computer Science - Computer Vision and Pattern Recognition},
	file = {Preprint PDF:/Users/nenchev/Zotero/storage/E65HXXJY/Radford et al. - 2021 - Learning Transferable Visual Models From Natural L.pdf:application/pdf;Snapshot:/Users/nenchev/Zotero/storage/4C4SI2XW/2103.html:text/html},
